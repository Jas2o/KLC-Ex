<Window
    x:Class="KLC_Ex.WindowAuthToken"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:KLC_Ex"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="KLC-Explorer: Auth Token"
    Width="320"
    MinHeight="70"
    Loaded="Window_Loaded"
    ResizeMode="NoResize"
    SizeToContent="Height"
    WindowStartupLocation="CenterOwner"
    mc:Ignorable="d">
    <Grid Margin="5">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition />
            <RowDefinition />
            <RowDefinition />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto" />
            <ColumnDefinition />
            <ColumnDefinition Width="Auto" />
        </Grid.ColumnDefinitions>
        <TextBlock
            Grid.ColumnSpan="3"
            Margin="0,0,0,5"
            TextWrapping="Wrap">
            Usually you would load your token via KLC-Proxy.
        </TextBlock>
        <Label Grid.Row="1" Content="VSA:" />
        <ComboBox
            x:Name="cmbAddress"
            Grid.Row="1"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Margin="5,0,0,5"
            DropDownClosed="cmbAddress_DropDownClosed"
            IsEditable="True"
            KeyUp="cmbAddress_KeyUp" />
        <Label Grid.Row="2" Content="Token:" />
        <PasswordBox
            x:Name="txtAuthToken"
            Grid.Row="2"
            Grid.RowSpan="2"
            Grid.Column="1"
            Grid.ColumnSpan="2"
            Height="23"
            Margin="5,0,0,0"
            VerticalAlignment="Top" />
        <Button
            x:Name="btnAuthSave"
            Grid.Row="3"
            Grid.Column="2"
            Width="100"
            Height="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Click="OKButton_Click"
            Content="Save for session" />
        <Button
            x:Name="btnAuthCopy"
            Grid.Row="4"
            Width="40"
            Height="20"
            HorizontalAlignment="Center"
            VerticalAlignment="Center"
            Click="btnAuthCopy_Click"
            Content="Copy"
            Opacity="0.5" />
    </Grid>
</Window>
