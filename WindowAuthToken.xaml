<Window x:Class="KLCEx.WindowAuthToken"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KLCEx"
        mc:Ignorable="d"
        Title="WindowAuthToken" Height="70" Width="240" ResizeMode="NoResize" WindowStartupLocation="CenterOwner">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition Width="2*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <TextBlock TextWrapping="Wrap" VerticalAlignment="Center" Margin="5,0"><Run Text="Token:"/></TextBlock>
        <PasswordBox x:Name="txtAuthToken" Height="23" VerticalAlignment="Center" Grid.Column="1" Margin="5,0"/>
        <Button x:Name="btnAuthSave" Content="Load" VerticalAlignment="Center" Grid.Column="2" Margin="5,0" Click="OKButton_Click"/>
    </Grid>
</Window>
